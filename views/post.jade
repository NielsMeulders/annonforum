extends layout

block content
  .row
    .small-12.large-4.columns.end
      h1
        | #{title}
      blockquote
        | #{content}
    form.small-12.large-8.columns(method="POST")
      .row
        .large-12.columns
          label
            | Leave a comment
          textarea.commentBox(placeholder='Post an answer / response', name='answer')
      .row
        .large-3.columns.large-centered
          input.button.postfix(type="submit" value="Create New Topic")
  .row
    .small-12.large-8.large-offset-4.columns
      each item in responses
        div.comment
          p
            | #{item.value.text}
          span.posted-date
            |  #{item.date}
